{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "NodeNext",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@statscore-exercise/feature-ingress": [
        "libs/traffic/feature-ingress/src/index.ts"
      ],
      "@statscore-exercise/shared-utils": ["libs/shared/utils/src/index.ts"],
      "@statscore-exercise/traffic-domain": ["libs/traffic/domain/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
